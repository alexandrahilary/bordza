{% include 'nav.html.twig' %}

{% block body %}
    <h1>Tarifs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Uneheure</th>
                <th>Cinqheures</th>
                <th>Dixheures</th>
                <th>Trimestre</th>
                <th>Annee</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarif in tarifs %}
            <tr>
                <td><a href="{{ path('admin_tarif_show', { 'id': tarif.id }) }}">{{ tarif.id }}</a></td>
                <td>{{ tarif.uneHeure }}</td>
                <td>{{ tarif.cinqHeures }}</td>
                <td>{{ tarif.dixHeures }}</td>
                <td>{{ tarif.trimestre }}</td>
                <td>{{ tarif.annee }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_tarif_show', { 'id': tarif.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_tarif_edit', { 'id': tarif.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_tarif_new') }}">Create a new tarif</a>
        </li>
    </ul>
{% endblock %}
