{% include 'nav.html.twig' %}

{% block body %}
<div class="container-fluid identifiant justify-content-center">

<div class="row justify-content-center">
    <div class="col-12">
        <div class="row justify-content-center">
            <h1>Modifier l'article</h1>
        </div>
    </div>
    <div class="col-5 border border-dark" style="padding:20px">
        <div class="row justify-content-center">
            <img class="img-fluid" src="{{ asset('uploads/images/' ~ actu.imageId ) }}">
            <div class="w-100"></div>
            <a href="{{ path('admin_image_edit_image', { 'id': actu.imageId.id })}}">-> changer l'image : </a>
        </div>
    {{ form_start(edit_form) }}
        <!-- titre -->
        <div class="form">
            <div class="input-group ">
                {{ form_label(edit_form.titre, 'Titre de la news', {'label_attr' : {'class' : 'input-group-text bg-dark text-light'}} ) }}
                {{ form_errors(edit_form.titre) }}
                {{ form_widget(edit_form.titre, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
    
    <!-- contenu -->
        <div class="form">
            <div class="input-group ">
                {{ form_label(edit_form.contenu, 'Contenu de la news', {'label_attr' : {'class' : 'input-group-text bg-dark text-light'}} ) }}
                {{ form_errors(edit_form.contenu) }}
                {{ form_widget(edit_form.contenu, {'attr': {'class':'form-control textarea'}}) }}
            </div>
        </div>

    <!-- resume -->
        <div class="form">
            <div class="input-group ">
                {{ form_label(edit_form.resume, 'Résumé de la news', {'label_attr' : {'class' : 'input-group-text bg-dark text-light'}} ) }}
                {{ form_errors(edit_form.resume) }}
                {{ form_widget(edit_form.resume, {'attr': {'class':'form-control textarea'}}) }}
            </div>
        </div>

    <!-- date -->
        <div class="form">
            <div class="input-group ">
                {{ form_label(edit_form.date, 'Date', {'label_attr' : {'class' : 'input-group-text bg-dark text-light'}} ) }}
                {{ form_errors(edit_form.date) }}
                {{ form_widget(edit_form.date) }}
            </div>
        </div>






    <div class="form bouton">
                <div class="row justify-content-center">
                    {{ form_widget(edit_form) }}
                    <button class="btn btn-dark" type="submit" value="Edit">Enregistrer les modifications</button>
                    {{ form_end(edit_form) }}
                </div>
            <div class="row justify-content-center">
                <a href="{{ path('admin_actu_index') }}"><- Revenir aux Articles</a>
            </div>
            <div class="form bouton">
                <div class="row justify-content-center">
                    {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-small">Supprimer</button>
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
{% endblock %}
