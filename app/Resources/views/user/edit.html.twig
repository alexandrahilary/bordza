{% extends 'base.html.twig' %}
{% block connexion %}{% include 'connexion.html.twig' %}{% endblock %}
{% block nav %}{% include 'nav.html.twig' %}{% endblock %}

{% block body %}
<div class="container-fluid justify-content-center bottom">
    <div class="col-12">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center">
                    <h3 class="text-center text-green mt-5">MODIFIEZ L'UTILISATEUR</h3>
                </div>
            </div>
            <div class="col-11 col-sm-11 col-md-11 col-lg-3 col-xl-3 top">
                <div class="row justify-content-center">
                    <div class="col-11">
                        {{ form_start(edit_form) }}
                        <div class="form">
                            <div class="">
                                {{ form_label(edit_form.username, ' Identifiant ') }}
                                {{ form_errors(edit_form.username) }}
                                {{ form_widget(edit_form.username, {'attr': {'class':'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form">
                            <div class="">
                                {{ form_label(edit_form.email, 'Adresse e-mail  ') }}
                                {{ form_errors(edit_form.email) }}
                                {{ form_widget(edit_form.email, {'attr': {'class':'form-control '}}) }}
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <button class="btn btn-secondary bouton mt-4" type="submit" value="Edit">Enregistrer les modifications</button>
                            <div class="w-100"></div>
                            {{ form_start(delete_form) }}
                                <button class="btn btn-danger bouton" type="submit" value="Delete">Supprimer</button>
                            {{ form_end(delete_form) }}
                            <div class="w-100"></div>
                            <a class="text text-green" href="{{ path('admin_user_index') }}" style="color:#1abc9c !important"><- Retour vers la liste d'utilisateurs</a>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block footer %}{% include 'footer.html.twig' %}{% endblock %}