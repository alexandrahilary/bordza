{% include 'nav.html.twig' %}

{% block body %}
    <h1>Video</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ video.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ video.contenu }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ video.resume }}</td>
            </tr>
            <tr>
                <th>Iframe</th>
                <td>{{ video.iframe }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ video.auteur }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if video.date %}{{ video.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_video_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_video_edit', { 'id': video.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
