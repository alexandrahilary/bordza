{% extends 'base.html.twig' %}
{% block metadescription %}<meta name="Description" content="Votre compte Bordza pour vous inscrire aux cours de skateboards et retrouver toutes vos inscriptions en ligne aux sessions organisées par l'école de skate de Bordza">{% endblock %}
{% block connexion %}{% include 'connexion.html.twig' %}{% endblock %}
{% block nav %}{% include 'nav.html.twig' %}{% endblock %}
{% block body %}



        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="flash-{{ type }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}

        <div class="bottom">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
{% endblock %}
{% block footer %}{% include 'footer.html.twig' %}{% endblock %}